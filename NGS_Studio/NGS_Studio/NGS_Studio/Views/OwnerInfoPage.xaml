<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NGS_Studio.Views.OwnerInfoPage"
             xmlns:vm="clr-namespace:NGS_Studio.ViewModels"
             Title="{Binding Title}" BackgroundColor="Black">

    <ContentPage.BindingContext>
        <vm:OwnerInfoViewModel />
    </ContentPage.BindingContext>

    <StackLayout Margin="20,35,20,20">
        <Button Text="Email Promotions"
                Command="{Binding EmailPromotionsCommand}"
                BackgroundColor="DarkGoldenrod"
                />
        <Button Text="Email Client List"
                Command="{Binding EmailClientListCommand}"
                BackgroundColor="DarkGoldenrod"
                />
<!--
        -Define Email promotion UI components here and set to invisible
-->
        
    </StackLayout>
    
</ContentPage>